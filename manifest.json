{
    "manifest_version": 2,
    "name": "Healthier Tech Habits",
    "description": "Block and remove/hide social media feeds (Twitter and Facebook).",
    "version": "1.0.0",
    "browser_action": {
        "default_icon": "healthier-tech-habits.png",
        "default_popup": "popup.html",
        "default_title": "Healthier Tech Habits"
    },
    "content_scripts": [
        {
            "matches": [
                "http://www.facebook.com/*",
                "https://www.facebook.com/*",
                "http://web.facebook.com/*",
                "https://web.facebook.com/*",
                "http://twitter.com/*",
                "https://twitter.com/*"
            ],
            "js": [
                "content.js"
            ],
            "css": [
                "healthier-tech-habits.css"
            ]
        }
    ],
    "web_accessible_resources": [
        "show-timeline.css",
        "show-news-feed.css",
        "healthier-tech-habits.png",
        "healthier-tech-habits-16.png",
        "healthier-tech-habits-48.png",
        "healthier-tech-habits-128.png"
    ],
    "icons": {
        "16":  "healthier-tech-habits-16.png",
        "48":  "healthier-tech-habits-48.png",
        "128": "healthier-tech-habits-128.png",
        "400": "healthier-tech-habits.png"
    }
}